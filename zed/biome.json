{
  "$schema": "https://biomejs.dev/schemas/2.1.0/schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "linter": {
    "rules": {
      "correctness": { "noUndeclaredVariables": "on" },
      "suspicious": {
        "noConsole": { "level": "on", "options": { "allow": ["error"] } }
      }
    }
  },
  "formatter": { "useEditorconfig": true },
  "javascript": {
    "formatter": { "quoteStyle": "single", "trailingCommas": "es5" }
  }
}
